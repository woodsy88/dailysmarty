<div class="container">
  <div class="row">
    <div class="col-xs-9 pull-left">
      <ul class="articles">
      <%= render 'shared/posts' %>
      </ul>
    </div>

    <div class="col-xs-3 sidebar pull-right">
      <ul>
        <% @topics.each do |topic| %>
          <li><%= link_to topic.title, topic_path(topic) %></li>
        <% end %>
      </ul>
    </div>
  </div>

</div>